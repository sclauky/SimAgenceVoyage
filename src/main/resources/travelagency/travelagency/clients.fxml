<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="travelagency.travelagency.controllers.ClientsController">

    <top>
        <Label text="Gestion des clients" style="-fx-font-size: 20px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="10" padding="20">
            <HBox spacing="10">
                <TextField fx:id="nameField" promptText="Nom" prefWidth="220"/>
                <TextField fx:id="idField" promptText="ID client" prefWidth="140"/>
                <Button text="Ajouter" onAction="#addClient"/>
            </HBox>

            <ListView fx:id="clientsList" prefHeight="380"/>

            <HBox spacing="10">
                <Button text="Supprimer sÃ©lection" onAction="#removeSelected"/>
                <Button text="Retour au menu" onAction="#back"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
