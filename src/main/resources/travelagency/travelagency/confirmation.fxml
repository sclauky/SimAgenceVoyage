<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="travelagency.travelagency.controllers.ConfirmationController"
           stylesheets="@app.css" styleClass="page">

    <VBox spacing="14" maxWidth="560" styleClass="card">
        <Label text="Réservation confirmée ✅" styleClass="title"/>

        <Separator/>

        <Label fx:id="summaryLabel" text="" styleClass="label-white"/>
        <Label fx:id="totalLabel" text="" styleClass="label-white"
               style="-fx-font-size:22px; -fx-font-weight:900;"/>

        <HBox spacing="10">
            <Button text="Nouvelle réservation" onAction="#newBooking" styleClass="btn-primary" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            <Button text="Accueil" onAction="#home" styleClass="btn-ghost" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        </HBox>
    </VBox>

    <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>
</StackPane>
